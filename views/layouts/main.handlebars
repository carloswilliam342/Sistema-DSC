<style>
  .mensagem {
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    text-align: center;
    font-weight: bold;
  }
  .sucesso {
    background-color: #4CAF50;
    color: white;
  }
  .erro {
    background-color: #f44336;
    color: white;
  }
</style>

<script>
    // Remove automaticamente as mensagens flash após 5 segundos
    setTimeout(() => {
        const flashMessages = document.querySelectorAll('.alert');
        flashMessages.forEach(message => {
            message.classList.add('fade-out'); // Adiciona uma classe para animação
            setTimeout(() => message.remove(), 500); // Remove o elemento após a animação
        });
    }, 5000); // 5 segundos
</script>

<style>
    /* Animação para desaparecer suavemente */
    .fade-out {
        opacity: 0;
        transition: opacity 0.5s ease-out;
    }

    /* Ajuste de tamanho das mensagens flash */
    .alert {
        font-size: 0.9rem; /* Reduz o tamanho do texto */
        padding: 10px 15px; /* Reduz o espaçamento interno */
        border-radius: 5px; /* Bordas arredondadas */
        max-width: 400px; /* Define uma largura máxima */
        margin: 10px auto; /* Centraliza horizontalmente */
    }
</style>

<!-- AOS Script -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  AOS.init();
</script>

</body>
</html>
