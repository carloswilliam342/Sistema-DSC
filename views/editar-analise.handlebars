<div class="container mt-5">
  <h2>Editar Análise</h2>
  <form action="/analise/{{analise.id}}" method="POST">
    <div class="mb-3">
      <label for="titulo" class="form-label">Título</label>
      <input type="text" id="titulo" name="titulo" class="form-control" value="{{analise.titulo}}" required>
    </div>
    <div class="mb-3">
      <label for="data_inicio" class="form-label">Data de Início</label>
      <input type="datetime-local" id="data_inicio" name="data_inicio" class="form-control" value="{{analise.data_inicio}}" required>
    </div>
    <div class="mb-3">
      <label for="data_fim" class="form-label">Data de Término</label>
      <input type="datetime-local" id="data_fim" name="data_fim" class="form-control" value="{{analise.data_fim}}" required>
    </div>
    <div class="mb-3">
      <label for="plataforma" class="form-label">Plataforma</label>
      <input type="text" id="plataforma" name="plataforma" class="form-control" value="{{analise.plataforma}}" required>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">E-mail</label>
      <input type="email" id="email" name="email" class="form-control" value="{{analise.email}}" required>
    </div>
    <div class="mb-3">
      <label for="descricao" class="form-label">Descrição</label>
      <textarea id="descricao" name="descricao" class="form-control" rows="4" required>{{analise.descricao}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <div></div>
    {{!-- <a href="/criar-discurso" class="btn btn-success">Adicionar discurso</a> --}}
  </form>
</div>