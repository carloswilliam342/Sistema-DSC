<div class="container mt-5">
    <div class="card shadow-sm">
        <img src="{{#if discurso.imagem}}/{{discurso.imagem}}{{else}}/uploads/imagens-discursos/default.png{{/if}}" 
        class="card-img-top" style="height: 300px; object-fit: cover;" alt="Imagem do Discurso">
        <div class="card-body">
            <h1 class="card-title">{{discurso.titulo}}</h1>
            <p class="text-muted">Categoria: {{discurso.categoria}}</p>
            <p class="card-text">{{{discurso.descricao}}}</p>
            <small class="text-muted">Criado em: {{formatDate discurso.dataCriacao}}</small>
            <div class="mt-4">
                <a href="/discursos/categoria/{{discurso.categoria}}" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>