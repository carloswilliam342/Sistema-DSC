<div class="container mt-4">
    <img id="mainImage" src="images/imagem-artigos.png" class="img-fluid w-100" alt="Imagem principal">
    
    <!-- Botões de categoria - Corrigido -->
    <div class="d-flex flex-wrap justify-content-center justify-content-md-start p-2 category-buttons">
        <button class="btn btn-outline-primary category-btn" data-category="introducao">Introdução</button>
        <button class="btn btn-outline-primary category-btn" data-category="coleta">Coleta de falas</button>
        <button class="btn btn-outline-primary category-btn" data-category="analise">Análise e categorias</button>
        <button class="btn btn-primary category-btn" data-category="geracao">Geração de discursos</button>
    </div>
    
    <div class="review-card my-4" id="review-section">
        <!-- Avaliações serão inseridas aqui via JavaScript -->
    </div>
    
    <!-- Seção de artigo - Melhorada -->
    <div class="article-section card p-4 text-center mb-4">
       <!-- Artigos serão inseridas aqui via JavaScript -->
    </div>
    
    <!-- Seção de compartilhamento -->
  <div class="share-section card p-4 mb-4">
    <div class="text-center mb-3">
