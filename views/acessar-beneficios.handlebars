<section class="container my-5">
    <h1 class="text-center text-primary">Configurar Pesquisa</h1>
    <div class="row justify-content-center">
        {{!-- Importando Bootstrap Icons --}}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="container text-center mt-4">
    <h2 class="mb-4">Acessar Benefícios do DSC</h2>

    <div class="row justify-content-center">
        {{#each planos}}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="text-primary">
                        <i class="bi {{this.icone}}"></i> {{this.categoria}}
                    </h5>
                    <h3 class="card-title fw-bold">{{this.nome}}</h3>
                    <p class="text-muted">{{this.descricao}}</p>

                    <ul class="list-unstyled text-start">
                        {{#each this.beneficios}}
                        <li><i class="bi bi-check-circle text-success"></i> {{this}}</li>
                        {{/each}}
                    </ul>

                    {{#if this.destaque}}
                    <span class="badge bg-warning text-dark">{{this.destaque}}</span>
                    {{/if}}

                    <button class="btn btn-primary mt-3">{{this.botao}}</button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

    </div>
</section>

<section class="container my-5">
    <div class="p-4 bg-dark text-white text-center rounded">
        <h2>Aprimore Suas Pesquisas com o DSC</h2>
        <p>Transforme respostas em insights valiosos.</p>
        <a href="#" class="btn btn-primary">Começar Agora</a> <!-- Chamar a view /analises futuramente quando a IA estiver implementada-->
    </div>
</section>

<section class="container my-5">
    <h2 class="text-center">Otimize Suas Pesquisas</h2>
    <div class="accordion" id="benefitsAccordion">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                    Criar pesquisa
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show">
                <div class="accordion-body">Passo a passo para criar pesquisas no DSC.</div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                    Adicionar perguntas
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse">
                <div class="accordion-body">Saiba como estruturar perguntas eficazes.</div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree">
                    Selecionar entrevistados
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse">
                <div class="accordion-body">Critérios para selecionar os melhores entrevistados.</div>
            </div>
        </div>
    </div>
    <div class="bg-info bg-opacity-25"> <!-- Opacidade reduzida -->
        <div class="container text-center mt-4">
            <h2 class="mb-4">Depoimentos dos usuários</h2>

            <div class="row justify-content-center">
                {{#each depoimentos}}
                <div class="col-md-3 mb-3"> <!-- Cards menores e mais juntos -->
                    <div class="card shadow-sm h-100" style="max-width: 250px;"> <!-- Largura reduzida -->
                        <div class="card-body text-center"> <!-- Centralização do conteúdo -->
                            <img src="{{this.imagem}}" class="card-img-top img-fluid rounded-circle" 
                                style="max-width: 100px;" alt="Imagem do Depoimento"> <!-- Imagem menor e arredondada -->
                            <h6 class="card-title fw-bold mt-2">{{this.nome}}</h6> <!-- Nome menor -->
                            <p class="text-muted" style="font-size: 14px;">{{this.texto}}</p> <!-- Texto menor -->
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>

    <section class="container my-5">
        <div class="p-4 bg-dark text-white d-flex justify-content-between align-items-center rounded">
            <h2 class="mb-0">Experimente o DSC gratuitamente</h2>
            <div>
                <a href="/dashboard" class="btn btn-primary me-3">Acessar o sistema</a>
                <a href="/sobre" class="btn btn-success bg-success text-white">Saiba mais</a>
            </div>
        </div>
    </section>

    <div class="container text-center mt-4">

        <div class="row justify-content-center">
                {{#each cardsComplementares}}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <img src="{{this.imagem}}" class="card-img-top img-fluid" 
                                style="max-width: 300px;" alt="Imagem do Depoimento"> 
                            <h3 class="card-title fw-bold">{{this.titulo}}</h3>
                            <p class="text-muted">{{this.descricao}}</p>
                            <a href="#" class="btn btn-success bg-success text-white">{{this.botao}}</a>
                        </div>
                    </div>
                </div>
                {{/each}}
        </div>
    </div>
</section>

